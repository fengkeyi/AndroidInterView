<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="content"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="410dp"
        android:minWidth="410dp"
        android:minHeight="275dp"
        android:layout_height="275dp"
        android:background="@drawable/shape_corner">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@{title}"
            android:textColor="#FFEBEBEB"
            android:textSize="21sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:text="@{content}"
            android:textColor="#FFEBEBEB"
            android:textSize="17sp"
            />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#FF414658"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="@string/str_i_know"
        android:textColor="#FF3AADFF"
        android:textSize="20sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
